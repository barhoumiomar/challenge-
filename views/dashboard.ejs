<div class="container">
    <h1 class="mb-4">Dashboard</h1>

    <!-- Events I'm Organizing -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">Events I'm Organizing</h2>
            <a href="/events/create" class="btn btn-primary btn-sm">Create New Event</a>
        </div>
        <div class="card-body">
            <% if (myEvents.length > 0) { %>
                <div class="row">
                    <% myEvents.forEach(event => { %>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title"><%= event.title %></h5>
                                    <p class="card-text"><%= event.description %></p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            Location: <%= event.location %><br>
                                            Date: <%= new Date(event.date).toLocaleDateString() %><br>
                                            Attendees: <%= event.attendees.length %>
                                        </small>
                                    </p>
                                    <a href="/events/<%= event._id %>" class="btn btn-primary btn-sm">Manage Event</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="text-muted">You're not organizing any events yet.</p>
            <% } %>
        </div>
    </div>

    <!-- Events I'm Attending -->
    <div class="card">
        <div class="card-header">
            <h2 class="h5 mb-0">Events I'm Attending</h2>
        </div>
        <div class="card-body">
            <% if (attendingEvents.length > 0) { %>
                <div class="row">
                    <% attendingEvents.forEach(event => { %>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title"><%= event.title %></h5>
                                    <p class="card-text"><%= event.description %></p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            Location: <%= event.location %><br>
                                            Date: <%= new Date(event.date).toLocaleDateString() %><br>
                                            Organizer: <%= event.organizer.name %>
                                        </small>
                                    </p>
                                    <a href="/events/<%= event._id %>" class="btn btn-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="text-muted">You're not attending any events yet.</p>
            <% } %>
        </div>
    </div>
</div>